<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="550dp"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="#008ed6"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/back2layout1"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="投件"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60s"
            android:id="@+id/count_down"
            android:textColor="@android:color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="center_vertical"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="37dp">

            <FrameLayout
                android:layout_width="210dp"
                android:layout_height="210dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/putcode" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫码开柜"
                android:id="@+id/textView5"
                android:textSize="20sp"
                android:textColor="#999" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="输入投件码"
                android:id="@+id/textView7"
                android:textColor="#008ed6"
                android:textSize="30sp"
                android:gravity="center_horizontal" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gray_border"
                android:paddingLeft="4dp"
                android:paddingTop="12dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp">
                <com.ss.testserial.Activity.SquareView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cursorVisible="false"
                        android:textSize="40sp"
                        android:maxLength="1"
                        android:id="@+id/getCode1"
                        android:gravity="center"
                        android:textColor="#008ed6"
                        android:background="@android:color/white" />

                </com.ss.testserial.Activity.SquareView>
                <com.ss.testserial.Activity.SquareView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cursorVisible="false"
                        android:textSize="40sp"
                        android:id="@+id/getCode2"
                        android:maxLength="1"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:textColor="#008ed6" />
                </com.ss.testserial.Activity.SquareView>
                <com.ss.testserial.Activity.SquareView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cursorVisible="false"
                        android:textSize="40sp"
                        android:id="@+id/getCode3"
                        android:maxLength="1"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:textColor="#008ed6" />
                </com.ss.testserial.Activity.SquareView>
                <com.ss.testserial.Activity.SquareView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cursorVisible="false"
                        android:textSize="40sp"
                        android:id="@+id/getCode4"
                        android:maxLength="1"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:textColor="#008ed6" />
                </com.ss.testserial.Activity.SquareView>
                <com.ss.testserial.Activity.SquareView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cursorVisible="false"
                        android:textSize="40sp"
                        android:id="@+id/getCode5"
                        android:maxLength="1"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:textColor="#008ed6" />
                </com.ss.testserial.Activity.SquareView>
                <com.ss.testserial.Activity.SquareView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cursorVisible="false"
                        android:textSize="40sp"
                        android:id="@+id/getCode6"
                        android:maxLength="1"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:textColor="#008ed6" />
                </com.ss.testserial.Activity.SquareView>
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="扫码投件"
                android:id="@+id/send2scan"
                android:background="@drawable/blue_radius"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温馨提示："
                android:id="@+id/textView9"
                android:textColor="#999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如有问题请及时拨打维护人员"
                android:id="@+id/textView8"
                android:textColor="#999" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作电话："
                    android:id="@+id/textView21"
                    android:textColor="#999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_phone"
                    android:textColor="#999" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_height="372dp" >

        <include
            layout="@layout/keyboard_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>