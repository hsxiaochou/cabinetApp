<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550dp"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="#fc8567"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <ImageView
            android:id="@+id/back2layout1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60s"
            android:textColor="@android:color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#efefef"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <com.ss.testserial.Common.NoMenuEditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:height="40dp"
            android:background="@drawable/gray_border"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#aaaaaa"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/loginCode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:height="40dp"
                android:background="@drawable/gray_border"
                android:hint="请输入登录码"
                android:maxLength="6"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="#aaaaaa"
                android:textSize="25sp" />

            <Button
                android:id="@+id/getLoginCode"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/pink_radius"
                android:text="重置登录密码"
                android:textColor="#fff"
                android:textSize="25sp" />
        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/pink_radius"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="30sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:layout_gravity="center_horizontal|bottom">


        <include
            layout="@layout/keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            layout="@layout/keyboard_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>


</LinearLayout>